{
  "compilerOptions": {
    "typeRoots": ["./types", "./node_modules/@types"],
    "outDir": "dist",
    "rootDir": ".",
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "worker/**/*.ts",
    "lib/logger.ts",
    "lib/redis.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "tests",
    "**/*.test.ts",
    "**/*.spec.ts",
    "scripts/**",
    "app/**/page.tsx",
    "app/**/layout.tsx",
    "app/**/route.ts",
    "worker/k8s-adapter.ts"
  ]
}
