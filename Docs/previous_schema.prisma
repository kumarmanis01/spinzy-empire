generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- Enums ---
enum UserStatus {
  active
  banned
  suspended
}

enum UserRole {
  user
  admin
  moderator
  support
}

// --- Models ---

/**
 * Core user model (NextAuth compatible)
 */
model User {
  id               String         @id @default(cuid())
  name             String?
  email            String?        @unique
  phone            String?        @unique
  emailVerified    DateTime?
  image            String?
  parentEmail      String?
  language         String?
  country          String?
  // Relations
  accounts         Account[]
  sessions         Session[]
  chats            Chat[] // one-to-one chat history (user <> AI)
  phoneOtps        PhoneOtp[]
  subscriptions    Subscription[]
  events           Event[] // analytics/events tied to user
  members          RoomMember[] // room participation (optional)
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  Room             Room[]
  chatHistories    ChatHistory[] // back-relation for ChatHistory
  status           UserStatus     @default(active)
  role             UserRole       @default(user)
  payments         Payment[]
  auditLogs        AuditLog[]
  apiUsages        ApiUsage[]
  passwordHash     String? // Store the hash here
  grade            String? // Student grade option
  board            String? // Student board (CBSE/ICSE/State/Other)
  // Store subjects as a Postgres text array for typed access in Prisma
  subjects         String[] @default([])   // Student subjects preferences
  lastWidgetToken  String? // Last OTP widget token received for this user
  welcomeEmailSent Boolean        @default(false)
  todaysFreeQuestionsCount Int      @default(3) // Tracks remaining free questions for the day

  // Referral relations
  referralsCreated  Referral[] @relation("ReferralCreator")
  redeemedReferrals Referral[] @relation("ReferralRedeemer")

  // Badges
  userBadges             UserBadge[]
  points                 Int                      @default(0)
  ChallengeParticipation ChallengeParticipation[]
}

model PhoneOtp {
  id         String   @id @default(cuid())
  phone      String
  codeHash   String
  createdAt  DateTime @default(now())
  expiresAt  DateTime
  attempts   Int      @default(0)
  consumed   Boolean  @default(false)
  ip         String? 
  userId     String?  // optional relation if you want to link to User
  user       User?    @relation(fields: [userId], references: [id])
  @@index([phone])
}

/**
 * NextAuth account/session models
 */
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model ChatHistory {
  id        String   @id @default(uuid())
  userId    String
  messages  String // JSON stringified array
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

/**
 * One-to-one Chat (user <-> AI) â€” used for personal chat history, profile, exports.
 */
model Chat {
  id        String   @id @default(cuid())
  userId    String? // null if guest / anonymous
  user      User?    @relation(fields: [userId], references: [id])
  role      String // "user" | "assistant" | "system"
  content   String // message content
  subject   String? // optional subject tag (math, science, coding)
  createdAt DateTime @default(now())
}

/**
 * Events for analytics (question_sent, login, export_pdf, etc.)
 */
model Event {
  id        String   @id @default(cuid())
  userId    String? // optional: null for anonymous/guest events
  user      User?    @relation(fields: [userId], references: [id])
  type      String // e.g., "question_sent", "login", "export_pdf"
  metadata  Json? // arbitrary JSON payload
  timestamp DateTime @default(now()) // explicit event timestamp (client-provided ts can override)
  createdAt DateTime @default(now())
}

/**
 * Subscription model
 */
model Subscription {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan         String // "free" | "pro" | "enterprise"
  billingCycle String // "monthly" | "annual"
  startDate    DateTime
  endDate      DateTime
  active       Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  paymentId    String?

  @@index([userId])
}

/**
 * Room / Participant / Message models for group study rooms
 */
model Room {
  id          String       @id @default(cuid())
  name        String
  subject     String? // subject/topic for the room
  description String?
  isPrivate   Boolean      @default(false)
  createdBy   String?
  creator     User?        @relation(fields: [createdBy], references: [id])
  members     RoomMember[]
  messages    Message[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  grade       String?
  topic       String?
  createdByAI Boolean      @default(false)
}

model RoomMember {
  id       String   @id @default(cuid())
  room     Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  roomId   String
  userId   String?
  user     User?    @relation(fields: [userId], references: [id])
  name     String?
  role     String? // "admin", "member", "guest"
  joinedAt DateTime @default(now())
  score    Int?

  @@index([roomId])
}

model Message {
  id        String   @id @default(cuid())
  room      Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  roomId    String
  senderId  String?
  sender    String?
  role      String // "user" | "assistant" | "system"
  type      String? // "text", "quiz", "announcement"
  content   String
  createdAt DateTime @default(now())
  aiMeta    Json?

  @@index([roomId])
}

model Payment {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  amount        Int
  provider      String // e.g. 'razorpay', 'stripe', etc.
  status        String // e.g. 'success', 'failed'
  createdAt     DateTime @default(now())
  transactionId String? // Generic transaction/payment ID from any gateway
  orderId       String? // Generic order/subscription ID from any gateway
  plan          String? // e.g. 'pro', 'basic'
  billingCycle  String? // e.g. 'monthly', 'yearly'
  meta          Json? // Store gateway-specific metadata if needed
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  action    String // e.g., "ban_user", "update_subscription"
  details   Json? // optional: extra info
  createdAt DateTime @default(now())
}

model ApiUsage {
  id       String   @id @default(cuid())
  userId   String? // Nullable for unauthenticated users
  user     User?    @relation(fields: [userId], references: [id])
  endpoint String
  method   String // HTTP method (e.g., GET, POST)
  count    Int      @default(1) // Optional: Remove if logging each call as a separate row
  lastUsed DateTime @default(now())
  metadata Json? // Optional: Store additional details (e.g., request headers, response status)

  @@unique([userId, endpoint, method], name: "userId_endpoint_method") // Updated unique constraint
}

model Referral {
  id         String    @id @default(cuid())
  code       String    @unique
  createdBy  String
  creator    User      @relation("ReferralCreator", fields: [createdBy], references: [id])
  redeemedBy String?
  redeemer   User?     @relation("ReferralRedeemer", fields: [redeemedBy], references: [id])
  redeemedAt DateTime?
  createdAt  DateTime  @default(now())
  metadata   Json?
}

model Badge {
  id          String      @id @default(cuid())
  key         String      @unique
  name        String
  description String?
  icon        String? // emoji or icon name
  createdAt   DateTime    @default(now())
  userBadges  UserBadge[]
  Challenge   Challenge[]
}

model UserBadge {
  id       String   @id @default(cuid())
  userId   String
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  badgeId  String
  badge    Badge    @relation(fields: [badgeId], references: [id], onDelete: Cascade)
  earnedAt DateTime @default(now())
  meta     Json?

  @@unique([userId, badgeId])
}

/**
 * BadgeShare - stores when a user shares a badge with another user (used by /api/badges/share)
 */
model BadgeShare {
  id          String   @id @default(cuid())
  badgeId     String
  senderId    String
  recipientId String
  metadata    Json?
  timestamp   DateTime @default(now())
  createdAt   DateTime @default(now())

  @@index([badgeId])
  @@index([recipientId])
}

/**
 * Challenges / Participation
 */
model Challenge {
  id             String                   @id @default(cuid())
  key            String                   @unique
  title          String
  description    String?
  startAt        DateTime
  endAt          DateTime
  rewardPoints   Int                      @default(0)
  rewardBadgeId  String?
  rewardBadge    Badge?                   @relation(fields: [rewardBadgeId], references: [id], onDelete: SetNull)
  createdAt      DateTime                 @default(now())
  participations ChallengeParticipation[]
}

model ChallengeParticipation {
  id            String    @id @default(cuid())
  challengeId   String
  challenge     Challenge @relation(fields: [challengeId], references: [id], onDelete: Cascade)
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  status        String    @default("joined") // "joined" | "completed"
  score         Int?
  submittedAt   DateTime?
  createdAt     DateTime  @default(now())
  rewardApplied Boolean   @default(false) // prevent re-applying rewards

  @@unique([challengeId, userId])
}
